---

export interface Props {
	id: string;
	title: string;
	subtitle?: string;
	body: string; 
	date?: string;
	
}

const { id, title, subtitle, body, date} = Astro.props;
---

<!-- 
<article id={id}>
	<header> {title} <div set:html={date}></div></header>
	<div set:html={body}></div>
</article>
-->



<div class="card" id={id}>
	<div class="card-content">
	  <div class="media">
		<div class="media-content">
		  <p class="title is-4">{title}</p>
		  <p class="subtitle is-6">{subtitle}</p>
		</div>
	  </div>
  
	  <div class="content">
		<div set:html={body}></div>
		<br>
		<div> {date} </div>  <!-- Date -->
	  </div>
	</div>
  </div>



<style>
	article{
		border: 1px solid rgba(var(--primary), 25%);
		color:#1d2a33;
	}
	header{
		display: flex;
		justify-content: space-between;
	}
	.bullet-indent{
		margin-left: 20px;
	}
	.media-content{
		overflow: hidden;
	}

	.title{
		height: 29px;
	}
	
</style>
