<nav class="mobile-nav">
 
  <div class="navbrand" id="navback">
    <a role="button" class="menu-toggle" aria-label="menu" aria-expanded="false" id="open-table" href="#">
      <i class="fa fa-bars icon-style" aria-hidden="true"></i>
    </a>
  </div>

  <div class="nav-menu" id="navbarMenuWrapper">
    <div class="nav-menu-items" id="navbarMenu">
      <a class="nav-item" href="/">About</a>
      <a class="nav-item" href="education">Education</a>
      <a class="nav-item" href="skills">Skills</a>
      <a class="nav-item" href="workexperience">Work Experience</a>
