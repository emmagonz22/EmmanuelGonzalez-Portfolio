<style is:global>

    .programming-logo-style{
        object-fit: contain;
        border-radius: 100px;
        padding: 5px;
    }

    .programming-logos-grid{
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(70px, 5fr)) ;
        gap: 30px;
        height: 100%;
    }

    .programming-logo-container{
		display: flex;
        height: 100%;
		justify-content: center;
        flex-direction: column;
        align-content: space-between;
        text-align: end;
	}
    .programming-logo-text{
        display: flex;
        justify-content: center;
        width: 100%;
        align-items: end;
        height: 100%;
        font-size: .7rem;
    }

    .programming-logo-i {
        font-size: 80px;
        display: flex;
        justify-content: center;
    }

</style>