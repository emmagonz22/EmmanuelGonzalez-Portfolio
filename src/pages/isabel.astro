            </div>
        </div>
        <div id="heart" class="heart">❤️</div>
    </div>

    <script>
        // Function to place heart randomly on the page
        function placeHeartRandomly() {
          const heart = document.getElementById("heart");
          const screenWidth = window.innerWidth;
          const screenHeight = window.innerHeight;
          
          // Subtracting a bit so the heart doesn't go out of bounds
          const randomLeft = Math.floor(Math.random() * (screenWidth - 60));
          const randomTop = Math.floor(Math.random() * (screenHeight - 60));
          if(heart){
            heart.style.left = randomLeft + "px";
            heart.style.top = randomTop + "px";
          }
        }
    
        document.addEventListener("DOMContentLoaded", () => {
          placeHeartRandomly();
          // Each time the heart is clicked, place it in a new random location
          const heartElement = document.getElementById("heart");
          if(heartElement){
            heartElement.addEventListener("click", placeHeartRandomly);
          }
        });
    </script>
</Layout>



<style>
    .title-page{
        font-size: 2rem;
        font-weight: 500;
        font-family: 'Linux Libertine', 'Georgia', 'Times', 'Source Serif Pro', serif;
    }
    .page{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        margin: 25px;
        padding: 10px;
    }

    .page-container{
        display: flex;
        flex-direction: column;
        align-self: center;
        width: 100%;
        height: 100%;
        max-width: 800px;
    }

    .heart {
        position: absolute; /* so we can place it at random coords */
        font-size: 3rem;
        cursor: pointer;
        user-select: none;
        animation: pulse 1.5s infinite;
    }

  /* Simple 'pulse' animation for the heart */
  @keyframes pulse {
    0% {
      transform: scale(1);
      color: red;
    }
    50% {
      transform: scale(1.3);
      color: hotpink;
    }
    100% {
      transform: scale(1);
      color: red;
    }
  }

  .infobox {
    width: 250px;
    border: 1px solid #aaa;
    background-color: #f9f9f9;
    padding: 5px;
    margin: 1rem 0 1rem 1rem;
    float: right;
    font-size: 0.9rem;
  }

  .infobox-header {
    text-align: center !important;
    font-weight: bold;
    background-color: #ccc;
    padding: 5px;
    border: 1px solid #aaa;
  }

  .infobox th,
  .infobox td {
    border: 1px solid #aaa;
    padding: 5px;
    vertical-align: top;
  }

  .infobox th {
    width: 30%;
    background-color: #f2f2f2;
  }

  .tabs {
    clear: both; /* So that the tabs are not affected by the float of the infobox */
  }

  .pics {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center
    ;
    width: 100%;    
}

</style>